<web-app version="3.0"
  xmlns="http://java.sun.com/xml/ns/javaee"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="
    http://java.sun.com/xml/ns/javaee
    http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <servlet-name>zippost</servlet-name>
    <servlet-class>com.zipservlet.servlet.ZipPostServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>zippost</servlet-name>
    <url-pattern>/zippost</url-pattern>
  </servlet-mapping>
</web-app>